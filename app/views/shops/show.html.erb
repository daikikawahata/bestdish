<div>
  <div>
    <table class="table table-striped table-hover" >
      <div>
        <tr>
          <td>カテゴリ：<%= @shop.category.name %></td>
          <td>住所：<%= @shop.address %></td>
          <td>店名：<%= @shop.name %></td>
          <td>投稿者：<a class="btn btn-info", href="/users/<%= @shop.user.id %>"><%= @shop.user.nickname%></a></td>
        </tr>
      </div>
      <div>
        <tr>
          <td>商品名：<%= @shop.dishname %></td>
          <td>値段：<%= @shop.price %>円</td>
        </tr>
      </div>
      <div>
        <tr>
          <td>感想：<%= @shop.impression %></td>
        </tr>
      </div>
    </table>
    <div>
      <%= image_tag @shop.image.variant(resize: '500x500') if @shop.image.attached? %>
    </div>
    <iframe id='map'
      src='https://www.google.com/maps/embed/v1/place?key=AIzaSyBeIJWI5wdP5di8fURnQUIxABIoMAq_kvM&amp;q=<%= @shop.address %>'
      width='100%'
      height='320'
      frameborder='0'>
    </iframe>
  </div>
  <div>
    <ul>
      <% if user_signed_in? && current_user.id == @shop.user_id%>
        <li class="btn btn-info">
          <%= link_to '編集', edit_shop_path(@shop.id), method: :get %>
        </li>
        <li class="btn btn-danger">
          <%= link_to '削除', shop_path(@shop.id), method: :delete %>
        </li>
      <% end %>
    </ul>
  </div>
</div>